<Window
    x:Class="JTMS.Dialogs.ProjectNotesWin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:VM="clr-namespace:JTMS.ViewModels.DialogsVM"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JTMS.Dialogs"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Project Note"
    Width="800"
    Height="600"
    MinWidth="500"
    Background="#FF323232"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="18"
            FontWeight="DemiBold"
            Foreground="White"
            Text="Project Note" />

        <TextBox
            x:Name="projName"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Width="350"
            Margin="5,10,5,5"
            Padding="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            VerticalContentAlignment="Top"
            materialDesign:HintAssist.Foreground="Gray"
            materialDesign:HintAssist.Hint="Name"
            materialDesign:HintAssist.IsFloating="True"
            materialDesign:TextFieldAssist.TextFieldCornerRadius="5"
            materialDesign:ThemeAssist.Theme="Inherit"
            Background="White"
            FontSize="{DynamicResource CustomFontSize}"
            Foreground="Black" />

        <TextBox
            x:Name="projDescription"
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Width="350"
            Margin="5"
            Padding="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            VerticalContentAlignment="Top"
            materialDesign:HintAssist.Foreground="Gray"
            materialDesign:HintAssist.Hint="Description"
            materialDesign:HintAssist.IsFloating="True"
            materialDesign:TextFieldAssist.TextFieldCornerRadius="5"
            materialDesign:ThemeAssist.Theme="Inherit"
            Background="White"
            FontSize="{DynamicResource CustomFontSize}"
            Foreground="Black" />

        <TextBox
            x:Name="ProjectNote"
            Grid.Row="3"
            Margin="10"
            Padding="10"
            materialDesign:HintAssist.Foreground="Gray"
            materialDesign:HintAssist.Hint="Note"
            materialDesign:HintAssist.IsFloating="True"
            materialDesign:TextFieldAssist.TextFieldCornerRadius=" 10"
            AcceptsReturn="True"
            Background="White"
            FontSize="{DynamicResource CustomFontSize}"
            Foreground="Black"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            TextAlignment="Left"
            TextWrapping="Wrap" />

        <StackPanel
            Grid.Row="4"
            Margin="0,0,0,10"
            HorizontalAlignment="Center"
            Orientation="Horizontal">

            <Button
                x:Name="saveNote"
                Width="120"
                Height="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                materialDesign:ButtonAssist.CornerRadius="5"
                Background="#216FA4"
                BorderThickness="0"
                Click="saveNote_Click"
                Content="Save"
                FontFamily="Open Sans"
                FontSize="18"
                FontWeight="SemiBold"
                Foreground="White" />
        </StackPanel>
    </Grid>
</Window>

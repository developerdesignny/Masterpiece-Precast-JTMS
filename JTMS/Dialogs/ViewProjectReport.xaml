<Window
    x:Class="JTMS.Dialogs.ViewProjectReport"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:VM="clr-namespace:JTMS.ViewModels.DialogsVM"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JTMS.Dialogs"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Progress Report"
    Width="1000"
    Height="650"
    d:DataContext="{d:DesignInstance Type=VM:ProjectReportViewModel}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <materialDesign:Card
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="LightGray"
            UniformCornerRadius="0">
            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="DemiBold"
                    Foreground="#2E2E2E"
                    Text="{Binding Label}" />

            </Grid>
        </materialDesign:Card>

        <DataGrid
            x:Name="DataLis"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="5"
            Padding="10"
            materialDesign:DataGridAssist.CellPadding="6"
            materialDesign:DataGridAssist.ColumnHeaderPadding="5"
            materialDesign:DataGridAssist.SelectedCellBorderBrush="Transparent"
            materialDesign:ThemeAssist.Theme="Dark"
            AutoGenerateColumns="False"
            Background="#3F494D"
            CanUserAddRows="False"
            ColumnWidth="*"
            Cursor="Hand"
            Focusable="False"
            FontSize="14"
            HorizontalScrollBarVisibility="Auto"
            IsReadOnly="True"
            IsSynchronizedWithCurrentItem="True"
            ItemsSource="{Binding ProjectReports}"
            ScrollViewer.CanContentScroll="True"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            Style="{StaticResource MaterialDesignDataGrid}"
            VerticalScrollBarVisibility="Auto">

            <DataGrid.ColumnHeaderStyle>
                <Style BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}" TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Foreground" Value="White" />
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>

                <DataGridTemplateColumn Width="*" Header="Job Name">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                Focusable="False"
                                Foreground="White"
                                Text="{Binding Project.JobName}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="*" Header="Mold Codes">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                Focusable="False"
                                Foreground="White"
                                Text="{Binding MoldCode}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="*" Header="Mold Process">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                Focusable="False"
                                Foreground="White"
                                Text="{Binding MoldProcess}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="*" Header="Process Date">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                Focusable="False"
                                Foreground="White"
                                Text="{Binding ProcessDate}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</Window>

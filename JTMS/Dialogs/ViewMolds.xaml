<Window
    x:Class="JTMS.Dialogs.ViewMolds"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:VM="clr-namespace:JTMS.ViewModels.DialogsVM"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JTMS.Dialogs"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Molds"
    Width="1100"
    Height="750"
    d:DataContext="{d:DesignInstance Type=VM:ViewMoldViewModel}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <materialDesign:DialogHost
        Background="Transparent"
        CloseOnClickAway="False"
        Identifier="SubRootDialogHost"
        Placement="Center">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <materialDesign:Card
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Background="LightGray"
                UniformCornerRadius="0">
                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="1"
                        Margin="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="DemiBold"
                        Foreground="#2E2E2E">
                        <Run Text="{Binding CurrentMold.MoldCode}" /><Run Text=" Molds" />
                    </TextBlock>

                    <Button
                        Grid.Column="2"
                        Margin="5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        Background="#FFCD02"
                        Command="{Binding AddSubMoldCommand}"
                        Cursor="Hand"
                        FontSize="16"
                        Foreground="White">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="20"
                                    Margin="0,2,0,0"
                                    VerticalAlignment="Center"
                                    Kind="Add" />
                                <TextBlock
                                    Margin="5,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="New Mold" />
                            </StackPanel>
                        </Button.Content>
                    </Button>

                </Grid>
            </materialDesign:Card>

            <DataGrid
                x:Name="DataLis"
                Grid.Row="1"
                Grid.RowSpan="2"
                Grid.Column="1"
                Margin="5"
                Padding="10"
                materialDesign:DataGridAssist.CellPadding="6"
                materialDesign:DataGridAssist.ColumnHeaderPadding="5"
                materialDesign:DataGridAssist.SelectedCellBorderBrush="Transparent"
                materialDesign:ThemeAssist.Theme="Dark"
                AutoGenerateColumns="False"
                Background="#3F494D"
                CanUserAddRows="False"
                ColumnWidth="*"
                Cursor="Hand"
                Focusable="False"
                FontSize="14"
                HorizontalScrollBarVisibility="Auto"
                IsReadOnly="True"
                IsSynchronizedWithCurrentItem="True"
                ItemsSource="{Binding Molds}"
                ScrollViewer.CanContentScroll="True"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                Style="{StaticResource MaterialDesignDataGrid}"
                VerticalScrollBarVisibility="Auto">

                <DataGrid.ColumnHeaderStyle>
                    <Style BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}" TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Foreground" Value="White" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding AllProcessDone}" Value="True">
                                <Setter Property="Background" Value="#806701" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding AllProcessDone}" Value="false">
                                <Setter Property="Background" Value="Transparent" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.Columns>

                    <DataGridTemplateColumn Width="*" Header="Index">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    Focusable="False"
                                    Foreground="White"
                                    Text="{Binding QIndex}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="*" Header="Mold Code">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    Focusable="False"
                                    Foreground="White"
                                    Text="{Binding Mold.MoldCode}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="*" Header="Mold Size">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    Focusable="False"
                                    Foreground="White"
                                    Text="{Binding Mold.MoldSize}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="*" Header="Mold Info">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    Focusable="False"
                                    Foreground="White"
                                    Text="{Binding Mold.MoldInfo}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="*" Header="Cut">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    Focusable="False"
                                    Foreground="White"
                                    Text="{Binding Mold.Cut}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="*" Header="Paint">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    Focusable="False"
                                    Foreground="White"
                                    Text="{Binding Mold.Paint}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="2*" Header="Process 1 (Mold Ready)">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    Focusable="False"
                                    FontWeight="Bold"
                                    Foreground="#FFCD02"
                                    Text="{Binding CurrentProcess1}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="2*" Header="Process 2 (Quality check)">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    Focusable="False"
                                    FontWeight="Bold"
                                    Foreground="#FFCD02"
                                    Text="{Binding CurrentProcess2}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="2*" Header="Process 3 (Pouring)">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    Focusable="False"
                                    FontWeight="Bold"
                                    Foreground="#FFCD02"
                                    Text="{Binding CurrentProcess3}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="2*" Header="Process 4 (Ready on Pallet)">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    Focusable="False"
                                    FontWeight="Bold"
                                    Foreground="#FFCD02"
                                    Text="{Binding CurrentProcess4}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="60" Header="">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel
                                    Margin="5"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">

                                    <Button
                                        Padding="5"
                                        VerticalAlignment="Center"
                                        materialDesign:ButtonAssist.CornerRadius="5"
                                        BorderThickness="0"
                                        Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}, Path=DataContext.DeleteMoldCommand}"
                                        CommandParameter="{Binding}"
                                        Content="{materialDesign:PackIcon Kind=Delete,
                                                                          Size=20}"
                                        Cursor="Hand"
                                        Focusable="False"
                                        Foreground="Brown"
                                        Style="{StaticResource MaterialDesignFlatDarkButton}"
                                        WindowChrome.IsHitTestVisibleInChrome="True" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>

            </DataGrid>

        </Grid>
    </materialDesign:DialogHost>
</Window>

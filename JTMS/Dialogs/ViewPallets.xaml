<Window
    x:Class="JTMS.Dialogs.ViewPallets"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:VM="clr-namespace:JTMS.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JTMS.Dialogs"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Pallets"
    Width="1000"
    Height="650"
    d:DataContext="{d:DesignInstance Type=VM:ViewPalletsViewModel}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <materialDesign:Card
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="LightGray"
            UniformCornerRadius="0">
            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="DemiBold"
                    Foreground="#2E2E2E"
                    Text="Pallets" />

            </Grid>
        </materialDesign:Card>

        <DataGrid
            x:Name="DataLis"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="5"
            Padding="10"
            materialDesign:DataGridAssist.CellPadding="6"
            materialDesign:DataGridAssist.ColumnHeaderPadding="5"
            materialDesign:DataGridAssist.SelectedCellBorderBrush="Transparent"
            materialDesign:ThemeAssist.Theme="Dark"
            AutoGenerateColumns="False"
            Background="#3F494D"
            CanUserAddRows="False"
            ColumnWidth="*"
            Cursor="Hand"
            Focusable="False"
            FontSize="14"
            HorizontalScrollBarVisibility="Auto"
            IsReadOnly="True"
            IsSynchronizedWithCurrentItem="True"
            ItemsSource="{Binding Pallets}"
            ScrollViewer.CanContentScroll="True"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            Style="{StaticResource MaterialDesignDataGrid}"
            VerticalScrollBarVisibility="Auto">

            <DataGrid.ColumnHeaderStyle>
                <Style BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}" TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Foreground" Value="White" />
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>

                <DataGridTemplateColumn Width="*" Header="Name">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                Focusable="False"
                                Foreground="White"
                                Text="{Binding Name}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="2*" Header="Mold Codes">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                Focusable="False"
                                Foreground="White"
                                Text="{Binding MoldCodes}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="*" Header="Status">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                Focusable="False"
                                Foreground="White"
                                Text="{Binding Status}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="80" Header="">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel
                                Margin="5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">

                                <Button
                                    Padding="5"
                                    VerticalAlignment="Center"
                                    materialDesign:ButtonAssist.CornerRadius="5"
                                    BorderThickness="0"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}, Path=DataContext.UndoPalletCommand}"
                                    CommandParameter="{Binding}"
                                    Content="{materialDesign:PackIcon Kind=Undo,
                                                                      Size=20}"
                                    Cursor="Hand"
                                    Focusable="False"
                                    Foreground="WhiteSmoke"
                                    Style="{StaticResource MaterialDesignFlatDarkButton}"
                                    WindowChrome.IsHitTestVisibleInChrome="True" />

                                <Button
                                    Margin="5,0,0,0"
                                    Padding="5"
                                    VerticalAlignment="Center"
                                    materialDesign:ButtonAssist.CornerRadius="5"
                                    BorderThickness="0"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}, Path=DataContext.DeletePalletCommand}"
                                    CommandParameter="{Binding}"
                                    Content="{materialDesign:PackIcon Kind=Delete,
                                                                      Size=20}"
                                    Cursor="Hand"
                                    Focusable="False"
                                    Foreground="Brown"
                                    Style="{StaticResource MaterialDesignFlatDarkButton}"
                                    WindowChrome.IsHitTestVisibleInChrome="True" />

                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</Window>

<Window
    x:Class="JTMS.Dialogs.MessageWin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JTMS.Dialogs"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Prompt"
    Width="300"
    Height="130"
    AllowsTransparency="True"
    Background="Transparent"
    BorderThickness="0"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="20"
            CornerRadius="10"
            GlassFrameThickness="0" />
    </WindowChrome.WindowChrome>

    <Border
        Background="WhiteSmoke"
        BorderBrush="#282828"
        BorderThickness="3"
        CornerRadius="10">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <TextBlock
                x:Name="PTitle"
                Grid.Row="0"
                Margin="8,5,5,5"
                VerticalAlignment="Center"
                FontWeight="DemiBold"
                Foreground="#282828"
                Text="Prompt" />

            <Button
                x:Name="Closebtn"
                Grid.Row="0"
                Width="30"
                Margin="5"
                Padding="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                materialDesign:ButtonAssist.CornerRadius="5"
                Background="Transparent"
                BorderThickness="0"
                Click="Closebtn_Click"
                Cursor="Hand"
                Style="{StaticResource MaterialDesignFlatDarkButton}"
                WindowChrome.IsHitTestVisibleInChrome="True">

                <Button.Content>

                    <materialDesign:PackIcon
                        Width="20"
                        Height="20"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        Background="Transparent"
                        Foreground="#282828"
                        Kind="WindowClose" />

                </Button.Content>
            </Button>

            <TextBlock
                x:Name="PText"
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="{DynamicResource CustomFontSize}"
                TextAlignment="Left"
                TextWrapping="Wrap" />

            <Button
                x:Name="OkBtn"
                Grid.Row="2"
                Width="100"
                Margin="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="#3F48CC"
                BorderBrush="#282828"
                Click="Closebtn_Click"
                Content="OK"
                Focusable="True"
                Foreground="White" />

        </Grid>
    </Border>
</Window>
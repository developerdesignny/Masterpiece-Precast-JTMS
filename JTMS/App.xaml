<Application
    x:Class="JTMS.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:JTMS.Converters"
    xmlns:local="clr-namespace:JTMS"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    StartupUri="ShellWindow.xaml">
    <Application.Resources>

        <ResourceDictionary>

            <converters:BoolToColorConverter x:Key="boolToColorCon" />

            <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="LightGray" />
            <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="LightGray" />
            <SolidColorBrush x:Key="SecondaryHueDarkBrush" Color="Black" />
            <SolidColorBrush x:Key="PrimaryHueLightForegroundBrush" Color="Black" />
            <SolidColorBrush x:Key="SecondaryHueMidForegroundBrush" Color="Black" />
            <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="LightGray" />

            <Style BasedOn="{StaticResource MaterialDesignScrollBarMinimal}" TargetType="ScrollBar">
                <Setter Property="materialDesign:ScrollBarAssist.ThumbCornerRadius" Value="5" />
            </Style>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Dark.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBox.xaml" />
                <ResourceDictionary Source="Styles/NavButtonStyles.xaml" />
                <ResourceDictionary Source="Dialogs/AddCompanyDialog.xaml" />
                <ResourceDictionary Source="Dialogs/AddProjectDialog.xaml" />
                <ResourceDictionary Source="Dialogs/AddMoldDialog.xaml" />
                <ResourceDictionary Source="Dialogs/ScanProcessSelector.xaml" />
                <ResourceDictionary Source="Dialogs/ListenOnScanDialog.xaml" />
                <ResourceDictionary Source="Dialogs/SelectFilterDate.xaml" />
                <ResourceDictionary Source="Dialogs/DialogStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>

    </Application.Resources>
</Application>

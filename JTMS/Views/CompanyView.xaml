<UserControl
    x:Class="JTMS.Views.CompanyView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:VM="clr-namespace:JTMS.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JTMS.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=VM:CompanyViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <materialDesign:Card
            Grid.Row="0"
            Background="LightGray"
            UniformCornerRadius="0">
            <Grid>

                <TextBlock
                    Margin="10"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="#2E2E2E"
                    Text="Companies" />


                <StackPanel
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <Button
                        Margin="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        Background="#3F494D"
                        Command="{Binding ReloadCommand}"
                        Content="{materialDesign:PackIcon Kind=Refresh,
                                                          Size=25}"
                        Cursor="Hand"
                        FontSize="16"
                        Foreground="White"
                        ToolTip="Refresh"
                        ToolTipService.BetweenShowDelay="0"
                        ToolTipService.InitialShowDelay="0" />

                    <Button
                        Margin="10"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        Background="#FFCD02"
                        Command="{Binding AddCompanyCommand}"
                        Cursor="Hand"
                        FontSize="16"
                        Foreground="White">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="20"
                                    Margin="0,2,0,0"
                                    VerticalAlignment="Center"
                                    Kind="Add" />
                                <TextBlock
                                    Margin="5,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="New Company" />
                            </StackPanel>
                        </Button.Content>
                    </Button>


                </StackPanel>

            </Grid>
        </materialDesign:Card>

        <DataGrid
            x:Name="DataLis"
            Grid.Row="1"
            Margin="0,5,0,5"
            Padding="10"
            materialDesign:DataGridAssist.CellPadding="6"
            materialDesign:DataGridAssist.ColumnHeaderPadding="5"
            materialDesign:DataGridAssist.SelectedCellBorderBrush="Transparent"
            materialDesign:ThemeAssist.Theme="Dark"
            AutoGenerateColumns="False"
            Background="#3F494D"
            CanUserAddRows="False"
            ColumnWidth="*"
            Cursor="Hand"
            Focusable="False"
            FontSize="14"
            HorizontalScrollBarVisibility="Auto"
            IsReadOnly="True"
            IsSynchronizedWithCurrentItem="True"
            ItemsSource="{Binding Companies}"
            ScrollViewer.CanContentScroll="True"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            Style="{StaticResource MaterialDesignDataGrid}"
            VerticalScrollBarVisibility="Auto">

            <DataGrid.ColumnHeaderStyle>
                <Style BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}" TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Foreground" Value="White" />
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>

                <DataGridTemplateColumn Width="*" Header="Company Name">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                Focusable="False"
                                Foreground="White"
                                Text="{Binding Name}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="130" Header="">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel
                                Margin="5"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">

                                <Button
                                    Margin="10,0,10,0"
                                    Padding="5"
                                    VerticalAlignment="Center"
                                    materialDesign:ButtonAssist.CornerRadius="5"
                                    BorderThickness="0"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}, Path=DataContext.EditCompanyCommand}"
                                    CommandParameter="{Binding}"
                                    Content="{materialDesign:PackIcon Kind=FileEdit,
                                                                      Size=20}"
                                    Cursor="Hand"
                                    Focusable="False"
                                    Foreground="White"
                                    Style="{StaticResource MaterialDesignFlatDarkButton}"
                                    WindowChrome.IsHitTestVisibleInChrome="True" />

                                <Button
                                    Padding="5"
                                    VerticalAlignment="Center"
                                    materialDesign:ButtonAssist.CornerRadius="5"
                                    BorderThickness="0"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}, Path=DataContext.DeleteCompanyCommand}"
                                    CommandParameter="{Binding}"
                                    Content="{materialDesign:PackIcon Kind=Delete,
                                                                      Size=20}"
                                    Cursor="Hand"
                                    Focusable="False"
                                    Foreground="Brown"
                                    Style="{StaticResource MaterialDesignFlatDarkButton}"
                                    WindowChrome.IsHitTestVisibleInChrome="True" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</UserControl>

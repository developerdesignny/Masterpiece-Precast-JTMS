<UserControl
    x:Class="JTMS.Views.MoldView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:VM="clr-namespace:JTMS.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JTMS.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=VM:MoldViewModel}"
    d:DesignHeight="600"
    d:DesignWidth="1000"
    mc:Ignorable="d">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2.3*" />
        </Grid.ColumnDefinitions>

        <materialDesign:Card
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="LightGray"
            UniformCornerRadius="0">
            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <StackPanel
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <Button
                        Margin="5"
                        Padding="5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        BorderThickness="0"
                        Command="{Binding GoBackCommand}"
                        Content="{materialDesign:PackIcon Kind=ArrowBack,
                                                          Size=25}"
                        Cursor="Hand"
                        Foreground="#282828"
                        Style="{StaticResource MaterialDesignFlatDarkButton}"
                        WindowChrome.IsHitTestVisibleInChrome="True" />

                    <Menu
                        Height="30"
                        Margin="20,3,0,0"
                        VerticalAlignment="Center"
                        materialDesign:ThemeAssist.Theme="Light"
                        Cursor="Hand">

                        <MenuItem Padding="5" VerticalAlignment="Center">
                            <MenuItem.Header>
                                <StackPanel Orientation="Horizontal">

                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        FontWeight="DemiBold"
                                        Foreground="#282828"
                                        Text="Reports" />
                                    <materialDesign:PackIcon
                                        Width="15"
                                        Height="15"
                                        Margin="10,0,0,0"
                                        Padding="0"
                                        VerticalAlignment="Center"
                                        Foreground="#282828"
                                        Kind="Printer" />
                                </StackPanel>

                            </MenuItem.Header>

                            <MenuItem Command="{Binding PrintProgressReportCMD}" Cursor="Hand">
                                <MenuItem.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon
                                            Width="20"
                                            Height="20"
                                            Foreground="#282828"
                                            Kind="FileDocument" />

                                        <TextBlock
                                            Margin="20,0,0,0"
                                            VerticalAlignment="Center"
                                            Text="Progress Report" />
                                    </StackPanel>
                                </MenuItem.Header>
                            </MenuItem>

                            <MenuItem Command="{Binding PrintReportCMD}" Cursor="Hand">
                                <MenuItem.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon
                                            Width="20"
                                            Height="20"
                                            Foreground="#282828"
                                            Kind="Printer" />

                                        <TextBlock
                                            Margin="20,0,0,0"
                                            VerticalAlignment="Center"
                                            Text="Pallet Report" />
                                    </StackPanel>
                                </MenuItem.Header>
                            </MenuItem>

                            <MenuItem Command="{Binding PrintPalletFilledCMD}" Cursor="Hand">
                                <MenuItem.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon
                                            Width="20"
                                            Height="20"
                                            Foreground="#282828"
                                            Kind="Printer" />

                                        <TextBlock
                                            Margin="20,0,0,0"
                                            VerticalAlignment="Center"
                                            Text="Pallet Filled BarCodes" />
                                    </StackPanel>
                                </MenuItem.Header>
                            </MenuItem>

                        </MenuItem>
                    </Menu>

                </StackPanel>

                <TextBlock
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Foreground="#2E2E2E">
                    <Run FontWeight="Bold" Text="Job Name:" />
                    <Run Text="{Binding CurrentProject.JobName, Mode=OneWay}" />
                    <Run Text="-" />
                    <Run Text="{Binding PercentageCleared, Mode=OneWay}" /><Run Text="%" />
                    <Run FontWeight="DemiBold" Text="Completed" />
                </TextBlock>

                <StackPanel
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <Button
                        Margin="5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        Background="#3F494D"
                        Command="{Binding ViewPalletsCommand}"
                        Cursor="Hand"
                        FontSize="16"
                        Foreground="White"
                        ToolTip="Pallets"
                        ToolTipService.BetweenShowDelay="0"
                        ToolTipService.InitialShowDelay="0">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="20"
                                    Margin="0,2,0,0"
                                    VerticalAlignment="Center"
                                    Kind="ShippingPallet" />
                                <TextBlock
                                    Margin="5,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="Pallets" />
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button
                        Margin="5"
                        Padding="7"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        Background="#FFCD02"
                        Command="{Binding PrintAllCommand}"
                        Content="{materialDesign:PackIcon Kind=Printer,
                                                          Size=20}"
                        Cursor="Hand"
                        FontSize="16"
                        Foreground="White"
                        ToolTip="Print all codes"
                        ToolTipService.BetweenShowDelay="0"
                        ToolTipService.InitialShowDelay="0" />

                    <Button
                        Margin="5"
                        Padding="7"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        Background="#3F494D"
                        Command="{Binding ImportMoldsCommand}"
                        Content="{materialDesign:PackIcon Kind=FileExcel,
                                                          Size=20}"
                        Cursor="Hand"
                        Foreground="White"
                        ToolTip="Import mold sheets from excel"
                        ToolTipService.BetweenShowDelay="0"
                        ToolTipService.InitialShowDelay="0" />

                    <Button
                        Margin="5"
                        Padding="7"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        Background="#3F494D"
                        Command="{Binding ReloadCommand}"
                        Content="{materialDesign:PackIcon Kind=Refresh,
                                                          Size=20}"
                        Cursor="Hand"
                        Foreground="White"
                        ToolTip="Refresh"
                        ToolTipService.BetweenShowDelay="0"
                        ToolTipService.InitialShowDelay="0" />

                    <Button
                        Margin="5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        Background="#FFCD02"
                        Command="{Binding AddMoldCommand}"
                        Cursor="Hand"
                        FontSize="16"
                        Foreground="White">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="20"
                                    Margin="0,2,0,0"
                                    VerticalAlignment="Center"
                                    Kind="Add" />
                                <TextBlock
                                    Margin="5,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="New Mold" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>

            </Grid>
        </materialDesign:Card>

        <materialDesign:Card
            Grid.Row="1"
            Grid.Column="0"
            Margin="5"
            Padding="3,10,3,10"
            Background="#3F494D">
            <StackPanel>

                <TextBlock
                    Grid.Row="0"
                    Margin="5,10,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White"
                    TextWrapping="Wrap">
                    <Run Text="Job Name: " />
                    <Run FontWeight="Regular" Text="{Binding CurrentProject.JobName}" />
                </TextBlock>

                <TextBlock
                    Grid.Row="0"
                    Margin="5,10,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White"
                    TextWrapping="Wrap">
                    <Run Text="Job Color: " />
                    <Run FontWeight="Regular" Text="{Binding CurrentProject.JobColor}" />
                </TextBlock>

                <TextBlock
                    Grid.Row="0"
                    Margin="5,10,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White"
                    TextWrapping="Wrap">
                    <Run Text="Job Date: " />
                    <Run FontWeight="Regular" Text="{Binding CurrentProject.JobDate}" />
                </TextBlock>

                <TextBlock
                    Grid.Row="0"
                    Margin="5,10,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White"
                    TextWrapping="Wrap">
                    <Run Text="Job Address: " />
                    <Run FontWeight="Regular" Text="{Binding CurrentProject.Address}" />
                </TextBlock>

                <TextBlock
                    Grid.Row="0"
                    Margin="5,10,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White"
                    TextWrapping="Wrap">
                    <Run Text="Company Name: " />
                    <Run FontWeight="Regular" Text="{Binding CurrentProject.Company.Name}" />
                </TextBlock>

            </StackPanel>
        </materialDesign:Card>

        <materialDesign:Card
            Grid.Row="2"
            Grid.Column="0"
            Margin="5"
            Padding="3"
            materialDesign:ThemeAssist.Theme="Inherit"
            Background="#3F494D">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="DemiBold"
                    Foreground="White"
                    Text="Notes"
                    ToolTip="Showing the top ten upcoming events"
                    ToolTipService.BetweenShowDelay="0"
                    ToolTipService.InitialShowDelay="0" />

                <Button
                    Grid.Column="1"
                    Padding="5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    materialDesign:ButtonAssist.CornerRadius="5"
                    Background="#3F494D"
                    Command="{Binding AddNewNoteCommand}"
                    Content="{materialDesign:PackIcon Kind=CreateNewFolder,
                                                      Size=20}"
                    Cursor="Hand"
                    Focusable="False"
                    FontSize="16"
                    Foreground="White"
                    ToolTip="Add new note"
                    ToolTipService.BetweenShowDelay="0"
                    ToolTipService.InitialShowDelay="0" />

                <ListView
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="5"
                    HorizontalContentAlignment="Stretch"
                    IsSynchronizedWithCurrentItem="True"
                    ItemsSource="{Binding ProjectNotes}">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <materialDesign:Card
                                Padding="5"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Stretch"
                                Background="LightGray"
                                UniformCornerRadius="10">

                                <materialDesign:Card.InputBindings>
                                    <MouseBinding
                                        Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListView}}, Path=DataContext.OpenNoteCommand}"
                                        CommandParameter="{Binding}"
                                        Gesture="LeftDoubleClick" />
                                </materialDesign:Card.InputBindings>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>


                                    <TextBlock
                                        Grid.Column="0"
                                        Height="40"
                                        Margin="15,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        FontWeight="DemiBold"
                                        Foreground="Black"
                                        TextAlignment="Left"
                                        TextWrapping="Wrap"
                                        ToolTipService.BetweenShowDelay="0"
                                        ToolTipService.InitialShowDelay="0"
                                        ToolTipService.Placement="MousePoint">
                                        <Run Text="{Binding Name}" />
                                        <LineBreak />
                                        <Run
                                            FontSize="{DynamicResource CustomFontSize}"
                                            FontStyle="Italic"
                                            FontWeight="Regular"
                                            Text="{Binding Description}" />

                                        <TextBlock.ToolTip>
                                            <TextBlock
                                                Padding="10"
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                FontWeight="DemiBold"
                                                TextAlignment="Left"
                                                TextWrapping="Wrap">
                                                <Run Text="Description" />
                                                <LineBreak />
                                                <Run
                                                    FontSize="{DynamicResource CustomFontSize}"
                                                    FontStyle="Italic"
                                                    FontWeight="Regular"
                                                    Text="{Binding Description}" />
                                            </TextBlock>
                                        </TextBlock.ToolTip>

                                    </TextBlock>

                                    <StackPanel
                                        Grid.Column="1"
                                        Margin="0,0,0,0"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">

                                        <Button
                                            Margin="10,0,10,0"
                                            Padding="5"
                                            VerticalAlignment="Center"
                                            materialDesign:ButtonAssist.CornerRadius="5"
                                            Background="#2E2E2E"
                                            Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListView}}, Path=DataContext.EditNoteCommand}"
                                            CommandParameter="{Binding}"
                                            Cursor="Hand"
                                            FontSize="16"
                                            Foreground="White"
                                            ToolTip="Edit Note Info"
                                            ToolTipService.BetweenShowDelay="0"
                                            ToolTipService.InitialShowDelay="0">
                                            <Button.Content>
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon
                                                        Width="20"
                                                        Height="20"
                                                        VerticalAlignment="Center"
                                                        Kind="NoteEdit" />
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>

                                        <Button
                                            Padding="5"
                                            VerticalAlignment="Center"
                                            materialDesign:ButtonAssist.CornerRadius="5"
                                            Background="DarkRed"
                                            Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListView}}, Path=DataContext.DeleteNoteCommand}"
                                            CommandParameter="{Binding}"
                                            Cursor="Hand"
                                            FontSize="16"
                                            Foreground="White"
                                            ToolTip="Delete Note"
                                            ToolTipService.BetweenShowDelay="0"
                                            ToolTipService.InitialShowDelay="0">
                                            <Button.Content>
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon
                                                        Width="20"
                                                        Height="20"
                                                        VerticalAlignment="Center"
                                                        Kind="Delete" />
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>

                                    </StackPanel>

                                </Grid>
                            </materialDesign:Card>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </Grid>
        </materialDesign:Card>

        <DataGrid
            x:Name="DataLis"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="0,5,0,5"
            Padding="10"
            materialDesign:DataGridAssist.CellPadding="6"
            materialDesign:DataGridAssist.ColumnHeaderPadding="5"
            materialDesign:DataGridAssist.SelectedCellBorderBrush="Transparent"
            materialDesign:ThemeAssist.Theme="Dark"
            AutoGenerateColumns="False"
            Background="#3F494D"
            CanUserAddRows="False"
            ColumnWidth="*"
            Cursor="Hand"
            Focusable="False"
            FontSize="14"
            HorizontalScrollBarVisibility="Auto"
            IsReadOnly="True"
            IsSynchronizedWithCurrentItem="True"
            ItemsSource="{Binding Molds}"
            ScrollViewer.CanContentScroll="True"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            Style="{StaticResource MaterialDesignDataGrid}"
            VerticalScrollBarVisibility="Auto">

            <DataGrid.ColumnHeaderStyle>
                <Style BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}" TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Foreground" Value="White" />
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding AllProcessDone}" Value="True">
                            <Setter Property="Background" Value="#806701" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding AllProcessDone}" Value="false">
                            <Setter Property="Background" Value="Transparent" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>

                <DataGridTemplateColumn Width="*" Header="Mold Amount">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                Focusable="False"
                                Foreground="White"
                                Text="{Binding MoldAmount}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="*" Header="Mold Size">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                Focusable="False"
                                Foreground="White"
                                Text="{Binding MoldSize}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="*" Header="Mold Code">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                Focusable="False"
                                Foreground="White"
                                Text="{Binding MoldCode}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="*" Header="Mold Info">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                Focusable="False"
                                Foreground="White"
                                Text="{Binding MoldInfo}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="*" Header="Cut">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                Focusable="False"
                                Foreground="White"
                                Text="{Binding Cut}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="auto" Header="Paint">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                Focusable="False"
                                Foreground="White"
                                Text="{Binding Paint}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="*" Header="Process 1 (Mold Ready)">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                Focusable="False"
                                FontWeight="Bold"
                                Foreground="#FFCD02"
                                Text="{Binding Process1Count}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="*" Header="Process 2 (Quality check)">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                Focusable="False"
                                FontWeight="Bold"
                                Foreground="#FFCD02"
                                Text="{Binding Process2Count}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="*" Header="Process 3 (Pouring)">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                Focusable="False"
                                FontWeight="Bold"
                                Foreground="#FFCD02"
                                Text="{Binding Process3Count}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="*" Header="Process 4 (Ready on Pallet)">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                Focusable="False"
                                FontWeight="Bold"
                                Foreground="#FFCD02"
                                Text="{Binding Process4Count}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="*" Header="ProcessCompleted">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                Focusable="False"
                                Foreground="White"
                                Text="{Binding ProcessCompleteCount}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="170" Header="">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel
                                Margin="5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">

                                <Button
                                    Margin="5,0,5,0"
                                    Padding="5"
                                    VerticalAlignment="Center"
                                    materialDesign:ButtonAssist.CornerRadius="5"
                                    BorderThickness="0"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}, Path=DataContext.OpenMoldCommand}"
                                    CommandParameter="{Binding}"
                                    Content="{materialDesign:PackIcon Kind=OpenInNew,
                                                                      Size=20}"
                                    Cursor="Hand"
                                    Focusable="False"
                                    Foreground="WhiteSmoke"
                                    Style="{StaticResource MaterialDesignFlatDarkButton}"
                                    WindowChrome.IsHitTestVisibleInChrome="True" />

                                <Button
                                    Margin="5,0,5,0"
                                    Padding="5"
                                    VerticalAlignment="Center"
                                    materialDesign:ButtonAssist.CornerRadius="5"
                                    BorderThickness="0"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}, Path=DataContext.PrintBarcodeCommand}"
                                    CommandParameter="{Binding}"
                                    Content="{materialDesign:PackIcon Kind=Printer,
                                                                      Size=20}"
                                    Cursor="Hand"
                                    Focusable="False"
                                    Foreground="#FFCD02"
                                    Style="{StaticResource MaterialDesignFlatDarkButton}"
                                    WindowChrome.IsHitTestVisibleInChrome="True" />

                                <Button
                                    Margin="5,0,5,0"
                                    Padding="5"
                                    VerticalAlignment="Center"
                                    materialDesign:ButtonAssist.CornerRadius="5"
                                    BorderThickness="0"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}, Path=DataContext.EditMoldCommand}"
                                    CommandParameter="{Binding}"
                                    Content="{materialDesign:PackIcon Kind=FileEdit,
                                                                      Size=20}"
                                    Cursor="Hand"
                                    Focusable="False"
                                    Foreground="White"
                                    Style="{StaticResource MaterialDesignFlatDarkButton}"
                                    WindowChrome.IsHitTestVisibleInChrome="True" />

                                <Button
                                    Padding="5"
                                    VerticalAlignment="Center"
                                    materialDesign:ButtonAssist.CornerRadius="5"
                                    BorderThickness="0"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}, Path=DataContext.DeleteMoldCommand}"
                                    CommandParameter="{Binding}"
                                    Content="{materialDesign:PackIcon Kind=Delete,
                                                                      Size=20}"
                                    Cursor="Hand"
                                    Focusable="False"
                                    Foreground="Brown"
                                    Style="{StaticResource MaterialDesignFlatDarkButton}"
                                    WindowChrome.IsHitTestVisibleInChrome="True" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</UserControl>

<UserControl
    x:Class="JTMS.Views.ProjectView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:VM="clr-namespace:JTMS.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JTMS.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=VM:ProjectViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <materialDesign:Card
            Grid.Row="0"
            Background="LightGray"
            UniformCornerRadius="0">
            <Grid>

                <TextBlock
                    Margin="10"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="#2E2E2E"
                    Text="Projects" />

                <StackPanel
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <Button
                        Margin="5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        Background="#3F494D"
                        Command="{Binding ProgressReportCommand}"
                        Cursor="Hand"
                        FontSize="16"
                        Foreground="White"
                        ToolTip="Get project report per date"
                        ToolTipService.BetweenShowDelay="0"
                        ToolTipService.InitialShowDelay="0">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="20"
                                    Margin="0,2,0,0"
                                    VerticalAlignment="Center"
                                    Kind="GoogleSpreadsheet" />
                                <TextBlock
                                    Margin="5,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="Daily Reports" />
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button
                        Margin="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        Background="#3F494D"
                        Command="{Binding ReloadCommand}"
                        Content="{materialDesign:PackIcon Kind=Refresh,
                                                          Size=25}"
                        Cursor="Hand"
                        FontSize="16"
                        Foreground="White"
                        ToolTip="Refresh"
                        ToolTipService.BetweenShowDelay="0"
                        ToolTipService.InitialShowDelay="0" />
                    <Button
                        Margin="10"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        Background="#FFCD02"
                        Command="{Binding AddProjectCommand}"
                        Cursor="Hand"
                        FontSize="16"
                        Foreground="White">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="20"
                                    Margin="0,2,0,0"
                                    VerticalAlignment="Center"
                                    Kind="Add" />
                                <TextBlock
                                    Margin="5,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="New Project" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>

            </Grid>
        </materialDesign:Card>

        <StackPanel
            Grid.Row="1"
            Margin="0,10,6,6"
            Orientation="Horizontal">

            <ComboBox
                Width="250"
                Padding="5"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                materialDesign:HintAssist.Foreground="Black"
                materialDesign:HintAssist.Hint="Company"
                materialDesign:HintAssist.IsFloating="True"
                materialDesign:TextFieldAssist.TextFieldCornerRadius="5"
                materialDesign:ThemeAssist.Theme="Light"
                Background="White"
                BorderBrush="Gray"
                BorderThickness="1"
                Foreground="Black"
                ItemsSource="{Binding Companies}"
                SelectedValue="{Binding SelectedCompany}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBox
                Width="250"
                Margin="10,0,0,0"
                Padding="5"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                materialDesign:HintAssist.Foreground="Black"
                materialDesign:HintAssist.Hint="Search"
                materialDesign:HintAssist.IsFloating="True"
                materialDesign:TextFieldAssist.TextFieldCornerRadius="5"
                Background="White"
                BorderBrush="Gray"
                BorderThickness="1"
                Foreground="Black"
                Text="{Binding SearchParam, Delay=5, UpdateSourceTrigger=PropertyChanged}" />

        </StackPanel>

        <DataGrid
            x:Name="DataLis"
            Grid.Row="2"
            Margin="0,5,0,5"
            Padding="10"
            materialDesign:DataGridAssist.CellPadding="6"
            materialDesign:DataGridAssist.ColumnHeaderPadding="5"
            materialDesign:DataGridAssist.SelectedCellBorderBrush="Transparent"
            materialDesign:ThemeAssist.Theme="Dark"
            AutoGenerateColumns="False"
            Background="#3F494D"
            CanUserAddRows="False"
            ColumnWidth="*"
            Cursor="Hand"
            Focusable="False"
            FontSize="14"
            HorizontalScrollBarVisibility="Auto"
            IsReadOnly="True"
            IsSynchronizedWithCurrentItem="True"
            ItemsSource="{Binding Projects}"
            ScrollViewer.CanContentScroll="True"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            Style="{StaticResource MaterialDesignDataGrid}"
            VerticalScrollBarVisibility="Auto">

            <DataGrid.ColumnHeaderStyle>
                <Style BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}" TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Foreground" Value="White" />
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>

                <DataGridTemplateColumn Width="*" Header="Job Name">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                Focusable="False"
                                Foreground="White"
                                Text="{Binding JobName}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="*" Header="Job Date">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                Focusable="False"
                                Foreground="White"
                                Text="{Binding JobDate}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="*" Header="Job Color">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                Focusable="False"
                                Foreground="White"
                                Text="{Binding JobColor}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="*" Header="Company Name">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                Focusable="False"
                                Foreground="White"
                                Text="{Binding Company.Name}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="1.5*" Header="Address">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Height="20"
                                Margin="5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Focusable="False"
                                Foreground="White"
                                Text="{Binding Address}"
                                TextWrapping="Wrap"
                                ToolTipService.BetweenShowDelay="0"
                                ToolTipService.HorizontalOffset="10"
                                ToolTipService.InitialShowDelay="0"
                                ToolTipService.Placement="MousePoint"
                                ToolTipService.VerticalOffset="10">
                                <TextBlock.ToolTip>
                                    <TextBlock
                                        MaxWidth="200"
                                        Margin="0,5,30,5"
                                        TextAlignment="Left"
                                        TextWrapping="Wrap">
                                        <Run FontWeight="Bold" Text="Address:" />
                                        <LineBreak />
                                        <Run FontSize="12" Text="{Binding Address, Mode=OneWay}" />
                                    </TextBlock>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="130" Header="">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel
                                Margin="5"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">

                                <Button
                                    Padding="5"
                                    VerticalAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    materialDesign:ButtonAssist.CornerRadius="5"
                                    BorderThickness="0"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}, Path=DataContext.OpenProjectCommand}"
                                    CommandParameter="{Binding}"
                                    Content="{materialDesign:PackIcon Kind=OpenInApp,
                                                                      Size=20}"
                                    Cursor="Hand"
                                    Focusable="False"
                                    Foreground="White"
                                    Style="{StaticResource MaterialDesignFlatDarkButton}"
                                    ToolTip="Open Project"
                                    ToolTipService.BetweenShowDelay="0"
                                    ToolTipService.InitialShowDelay="0"
                                    WindowChrome.IsHitTestVisibleInChrome="True" />

                                <Button
                                    Margin="10,0,10,0"
                                    Padding="5"
                                    VerticalAlignment="Center"
                                    materialDesign:ButtonAssist.CornerRadius="5"
                                    BorderThickness="0"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}, Path=DataContext.EditProjectCommand}"
                                    CommandParameter="{Binding}"
                                    Content="{materialDesign:PackIcon Kind=FileEdit,
                                                                      Size=20}"
                                    Cursor="Hand"
                                    Focusable="False"
                                    Foreground="White"
                                    Style="{StaticResource MaterialDesignFlatDarkButton}"
                                    WindowChrome.IsHitTestVisibleInChrome="True" />

                                <Button
                                    Padding="5"
                                    VerticalAlignment="Center"
                                    materialDesign:ButtonAssist.CornerRadius="5"
                                    BorderThickness="0"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}, Path=DataContext.DeleteProjectCommand}"
                                    CommandParameter="{Binding}"
                                    Content="{materialDesign:PackIcon Kind=Delete,
                                                                      Size=20}"
                                    Cursor="Hand"
                                    Focusable="False"
                                    Foreground="Brown"
                                    Style="{StaticResource MaterialDesignFlatDarkButton}"
                                    WindowChrome.IsHitTestVisibleInChrome="True" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</UserControl>

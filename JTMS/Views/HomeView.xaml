<UserControl
    x:Class="JTMS.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:VM="clr-namespace:JTMS.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JTMS.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=VM:HomeViewModel}"
    d:DesignHeight="750"
    d:DesignWidth="1000"
    mc:Ignorable="d">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="2.5*" />
            <ColumnDefinition Width="*" MinWidth="250" />
        </Grid.ColumnDefinitions>

        <materialDesign:Card
            Grid.Row="0"
            Grid.Column="0"
            Margin="10"
            Padding="10"
            Background="White"
            UniformCornerRadius="10">
            <StackPanel>
                <Label>
                    <Label.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="20"
                                FontWeight="Bold"
                                Foreground="#2E2E2E"
                                Text="Quick Actions" />
                            <materialDesign:PackIcon
                                Width="25"
                                Height="25"
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Cursor="Hand"
                                Foreground="#2E2E2E"
                                Kind="InfoCircle"
                                ToolTip="Quick action access"
                                ToolTipService.BetweenShowDelay="0"
                                ToolTipService.InitialShowDelay="0" />
                        </StackPanel>
                    </Label.Content>
                </Label>

                <StackPanel Margin="10" Orientation="Horizontal">

                    <Button
                        Width="68"
                        Height="60"
                        Padding="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding AddCompanyCommand}"
                        ToolTip="Add Company"
                        ToolTipService.BetweenShowDelay="0"
                        ToolTipService.InitialShowDelay="0">
                        <Button.Content>
                            <Grid>
                                <Border
                                    Width="50"
                                    Height="50"
                                    Margin="0,10,0,0"
                                    VerticalAlignment="Center"
                                    BorderBrush="#2E2E2E"
                                    BorderThickness="1"
                                    CornerRadius="50">

                                    <materialDesign:PackIcon
                                        Width="25"
                                        Height="25"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="#FFCD02"
                                        Kind="Company" />
                                </Border>
                                <materialDesign:PackIcon
                                    Width="20"
                                    Height="20"
                                    Margin="50,0,0,0"
                                    Padding="5"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Foreground="#2E2E2E"
                                    Kind="PlusCircle" />
                            </Grid>
                        </Button.Content>
                    </Button>

                    <Button
                        Width="68"
                        Height="60"
                        Margin="20,0,20,0"
                        Padding="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding AddProjectCommand}"
                        ToolTip="New Project"
                        ToolTipService.BetweenShowDelay="0"
                        ToolTipService.InitialShowDelay="0">
                        <Button.Content>
                            <Grid>
                                <Border
                                    Width="50"
                                    Height="50"
                                    Margin="0,10,0,0"
                                    VerticalAlignment="Center"
                                    BorderBrush="#2E2E2E"
                                    BorderThickness="1"
                                    CornerRadius="50">

                                    <materialDesign:PackIcon
                                        Width="25"
                                        Height="25"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="#FFCD02"
                                        Kind="Factory" />
                                </Border>

                                <materialDesign:PackIcon
                                    Width="20"
                                    Height="20"
                                    Margin="50,0,0,0"
                                    Padding="5"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Foreground="#2E2E2E"
                                    Kind="PlusCircle" />
                            </Grid>
                        </Button.Content>
                    </Button>


                </StackPanel>

            </StackPanel>
        </materialDesign:Card>

        <materialDesign:Card
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="10,0,0,10"
            Padding="5"
            Background="White"
            UniformCornerRadius="10">

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="#2E2E2E"
                    Text="Project Status" />

                <DataGrid
                    Grid.Row="1"
                    Margin="0,5,5,5"
                    Padding="10"
                    materialDesign:DataGridAssist.CellPadding="6"
                    materialDesign:DataGridAssist.ColumnHeaderPadding="5"
                    materialDesign:DataGridAssist.SelectedCellBorderBrush="Transparent"
                    materialDesign:ThemeAssist.Theme="Light"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    ColumnWidth="*"
                    Cursor="Hand"
                    Focusable="False"
                    FontSize="14"
                    HorizontalScrollBarVisibility="Auto"
                    IsReadOnly="True"
                    IsSynchronizedWithCurrentItem="True"
                    ItemsSource="{Binding Projects}"
                    ScrollViewer.CanContentScroll="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    Style="{StaticResource MaterialDesignDataGrid}"
                    VerticalScrollBarVisibility="Auto">

                    <DataGrid.ColumnHeaderStyle>
                        <Style BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}" TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Foreground" Value="Black" />
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>

                        <DataGridTemplateColumn Width="*" Header="Job Name">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Margin="5"
                                        VerticalAlignment="Center"
                                        Focusable="False"
                                        Foreground="#2E2E2E"
                                        Text="{Binding JobName}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Width="*" Header="Company Name">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Margin="5"
                                        VerticalAlignment="Center"
                                        Focusable="False"
                                        Foreground="#2E2E2E"
                                        Text="{Binding Company.Name}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Width="*" Header="Last Updated">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Margin="5"
                                        VerticalAlignment="Center"
                                        Focusable="False"
                                        Foreground="#2E2E2E"
                                        Text="{Binding ProjectUpdateDate}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Width="*" Header="Percentage Completion">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Margin="5"
                                        VerticalAlignment="Center"
                                        Focusable="False"
                                        Foreground="#2E2E2E">
                                        <Run Text="{Binding PercentageCleared, Mode=OneWay}" /><Run Text="%" />
                                        <Run FontWeight="DemiBold" Text="Completed" />
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>

                </DataGrid>

            </Grid>
        </materialDesign:Card>

        <materialDesign:Card
            Grid.Row="0"
            Grid.RowSpan="3"
            Grid.Column="2"
            Margin="10"
            Padding="5"
            Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="#2E2E2E"
                    Text="Notifications" />

                <materialDesign:Card
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5"
                    materialDesign:ThemeAssist.Theme="Light"
                    Background="WhiteSmoke"
                    UniformCornerRadius="10">
                    <ListView
                        Margin="5"
                        HorizontalContentAlignment="Stretch"
                        Focusable="False"
                        IsSynchronizedWithCurrentItem="True"
                        ItemsSource="{Binding ProjectNotifications}">

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <materialDesign:Card
                                    Padding="5"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    Cursor="Hand"
                                    Focusable="False"
                                    ToolTipService.BetweenShowDelay="0"
                                    ToolTipService.InitialShowDelay="0"
                                    ToolTipService.Placement="MousePoint"
                                    UniformCornerRadius="10">

                                    <Grid Focusable="False">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            Padding="5"
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            FontWeight="DemiBold"
                                            Text="{Binding NotificationT}"
                                            TextAlignment="Left"
                                            TextWrapping="Wrap" />

                                        <StackPanel Grid.Column="1" Orientation="Horizontal">

                                            <Button
                                                Padding="5"
                                                VerticalAlignment="Center"
                                                materialDesign:ButtonAssist.CornerRadius="5"
                                                BorderThickness="0"
                                                Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListView}}, Path=DataContext.RemoveNotificationCommand}"
                                                CommandParameter="{Binding}"
                                                Content="{materialDesign:PackIcon Kind=Delete,
                                                                                  Size=20}"
                                                Cursor="Hand"
                                                Focusable="False"
                                                Foreground="Brown"
                                                Style="{StaticResource MaterialDesignFlatDarkButton}"
                                                WindowChrome.IsHitTestVisibleInChrome="True" />
                                        </StackPanel>

                                    </Grid>

                                </materialDesign:Card>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </materialDesign:Card>

                <Calendar
                    Grid.Row="2"
                    Margin="5,0,5,5"
                    HorizontalAlignment="Right"
                    materialDesign:CalendarAssist.IsHeaderVisible="False"
                    materialDesign:ThemeAssist.Theme="Inherit"
                    Background="#3F494D"
                    Foreground="White" />
            </Grid>
        </materialDesign:Card>

    </Grid>
</UserControl>
